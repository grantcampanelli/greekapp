<div class="modal-content">
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h2 class="modal-title" id="gridSystemModalLabel">Select a Category</h2>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <form class="modifyCategory form-horizontal col-sm-12">

                
                <div class="form-group">
                    
                    <label for="category-selected" class="col-sm-3 col-sm-offset-1 control-label">Category</label>
                    <div class="col-sm-6">
                        <select id="category-selected" required="true" class="categorySelected form-control" type="text" name="categorySelected" placeholder="i.e. Tests"></select>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <div class="modal-footer">
        <div class="error text-center"></div>
        <button type="submit" class="ok btn btn-primary" autocomplete="off">Ok</button>
        <button type="button" class="cancel btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
    
</div>